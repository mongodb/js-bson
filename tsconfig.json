{
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "strict": false,
    "declaration": true,
    "importHelpers": false,
    "alwaysStrict": true,
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": [
      "ES2017"
    ],
    "allowSyntheticDefaultImports": true,
    "noEmitHelpers": false,
    "noEmitOnError": true,
    "outDir": "lib",
    "importsNotUsedAsValues": "error",
    "sourceMap": true,
    "types": [
      "node"
    ]
  },
  "ts-node": {
    "transpileOnly": true,
    "compiler": "typescript-cached-transpile"
  },
  "include": [
    "src/**/*"
  ]
}
