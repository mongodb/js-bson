{
  "name": "bson",
  "description": "A bson parser for node.js and the browser",
  "keywords": [
    "mongodb",
    "bson",
    "parser"
  ],
  "files": [
    "lib",
    "dist",
    "bower.json"
  ],
  "version": "4.1.0",
  "author": "Christian Amor Kvalheim <christkv@gmail.com>",
  "license": "Apache-2.0",
  "contributors": [],
  "repository": "mongodb/js-bson",
  "bugs": {
    "mail": "node-mongodb-native@googlegroups.com",
    "url": "https://github.com/mongodb/js-bson/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/plugin-external-helpers": "^7.10.4",
    "@babel/plugin-transform-modules-umd": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@microsoft/api-extractor": "^7.9.6",
    "@rollup/plugin-babel": "^5.2.0",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-sucrase": "^3.1.0",
    "@rollup/plugin-typescript": "^5.0.2",
    "@types/gulp": "^4.0.6",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "benchmark": "^2.1.4",
    "chai": "^4.2.0",
    "dmd-clear": "^0.1.2",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "gulp": "^4.0.2",
    "gulp-typescript": "^6.0.0-alpha.1",
    "karma": "^5.1.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-rollup-preprocessor": "^7.0.5",
    "mocha": "^8.1.1",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "rollup": "^2.26.4",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "standard-version": "^8.0.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "typescript-cached-transpile": "0.0.6"
  },
  "config": {
    "native": false
  },
  "main": "lib/bson.js",
  "module": "dist/bson.esm.js",
  "engines": {
    "node": ">=6.9.0"
  },
  "scripts": {
    "docs": "jsdoc2md --heading-depth 3 --template tools/README.hbs --plugin dmd-clear --files lib/bson.js lib/extended_json.js > README.md",
    "test": "npm run-script lint && npm run-script test-node && npm run-script test-browser",
    "test-node": "node --throw-deprecation node_modules/mocha/bin/_mocha ./test/node",
    "test-browser": "npm run-script build && node --throw-deprecation node_modules/.bin/karma start",
    "build": "tsc && rollup -c rollup.config.ts",
    "lint": "eslint -v && eslint --ext '.js,.ts' src test",
    "format": "prettier --print-width 100 --tab-width 2 --single-quote --write 'test/**/*.js' 'lib/**/*.js'",
    "coverage": "nyc cover _mocha -- --recursive --ui tdd test/node",
    "prepublishOnly": "npm run build",
    "release": "standard-version -i HISTORY.md"
  },
  "dependencies": {
    "@babel/runtime": "^7.11.2",
    "buffer": "^5.6.0",
    "core-js": "^3.6.5"
  }
}
