{
  "name": "bson",
  "description": "A bson parser for node.js and the browser",
  "keywords": [
    "mongodb",
    "bson",
    "parser"
  ],
  "files": [
    "lib",
    "dist",
    "types",
    "etc/prepare.js",
    "bower.json"
  ],
  "version": "4.1.0",
  "author": "Christian Amor Kvalheim <christkv@gmail.com>",
  "license": "Apache-2.0",
  "contributors": [],
  "repository": "mongodb/js-bson",
  "bugs": {
    "mail": "node-mongodb-native@googlegroups.com",
    "url": "https://github.com/mongodb/js-bson/issues"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@microsoft/api-extractor": "^7.9.6",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-typescript": "^5.0.2",
    "@types/core-js": "^2.5.3",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "benchmark": "^2.1.4",
    "chai": "^4.2.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "json5": "^2.1.3",
    "karma": "^5.1.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-rollup-preprocessor": "^7.0.5",
    "karma-typescript": "^5.1.0",
    "mocha": "^8.1.1",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "rollup": "^2.26.5",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-terser": "^7.0.0",
    "standard-version": "^8.0.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "typescript-cached-transpile": "0.0.6"
  },
  "config": {
    "native": false
  },
  "main": "lib/bson.js",
  "module": "dist/bson.esm.js",
  "browser": {
    "./lib/bson.js": "./dist/bson.browser.umd.js",
    "./dist/bson.esm.js": "./dist/bson.browser.esm.js"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "docs": "typedoc",
    "test": "npm run test-node && npm run test-browser",
    "test-node": "mocha test/node",
    "test-browser": "# npm run build && karma start karma.conf.js",
    "build:ts": "tsc",
    "build:dts": "npm run build:ts && api-extractor run --typescript-compiler-folder node_modules/typescript --local && rimraf 'lib/**/*.d.ts*'",
    "build:bundle": "rollup -c rollup.config.js",
    "build": "npm run build:dts && npm run build:bundle",
    "lint": "eslint -v && eslint --ext '.js,.ts' src test && tsc --noEmit",
    "format": "eslint --ext '.js,.ts' src test --fix",
    "coverage": "nyc mocha test/node",
    "prepare": "node etc/prepare.js",
    "release": "standard-version -i HISTORY.md"
  },
  "dependencies": {
    "buffer": "^5.6.0",
    "core-js": "^3.6.5"
  }
}
